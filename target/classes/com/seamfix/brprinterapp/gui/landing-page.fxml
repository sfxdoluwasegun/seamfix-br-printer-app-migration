<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>

<BorderPane fx:id="root" prefHeight="350.0" prefWidth="400.0" styleClass="login-container"
            xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.seamfix.brprinterapp.controller.LandingPageController">
    <top>
        <AnchorPane>
            <children>
                <HBox spacing="5.0" AnchorPane.leftAnchor="5.0">
                    <children>
                        <Label fx:id="lblPrinter" prefHeight="25.0" maxWidth="-Infinity" text="Printer Name"/>
                        <JFXButton fx:id="btnChange" prefHeight="25.0" maxWidth="-Infinity" text="Change"
                                   onAction="#changePrinter"/>
                    </children>
                </HBox>
                <JFXComboBox fx:id="projectsCombo" layoutX="19.0" prefHeight="30.0" prefWidth="126.0"
                             promptText="-- Select Project --" AnchorPane.rightAnchor="10.0"/>
            </children>
        </AnchorPane>
    </top>
    <bottom>
        <HBox spacing="0.0" BorderPane.alignment="BOTTOM_RIGHT" alignment="BOTTOM_RIGHT">
            <children>
                <JFXButton fx:id="btnSend" prefHeight="25.0" prefWidth="100.0"
                           onAction="#sendToPrinter" text="%Landing.btnSend.text"/>

                <ImageView fx:id="imgStatus" fitHeight="25.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true"/>
            </children>
        </HBox>
    </bottom>
    <center>
        <VBox fx:id="vboxSysIDs" spacing="13.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lblPrint" prefHeight="25.0" text="%Landing.lblPrint.text" alignment="CENTER_LEFT">
                    <VBox.margin>
                        <Insets top="15"/>
                    </VBox.margin>
                </Label>
                <TextArea fx:id="txtEnterSysIds" prefHeight="250.0" prefWidth="370.0"
                          promptText="%Landing.txtEnterSysIds.text"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </center>
    <padding>
        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0"/>
    </padding>
</BorderPane>

